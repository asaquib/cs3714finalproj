<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/nameView"
        android:layout_width="126dp"
        android:layout_height="35dp"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="110dp"
        android:layout_marginTop="60dp"
        android:text="TextView"
        android:textAlignment="center"
        android:textSize="22dp"
        app:layout_constraintLeft_toRightOf="@+id/nameLabel"
        app:layout_constraintTop_toBottomOf="@+id/profilePicture" />

    <TextView
        android:id="@+id/nameLabel"
        android:layout_width="126dp"
        android:layout_height="35dp"
        android:layout_marginLeft="216dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="60dp"
        android:text="Name"
        android:textSize="22dp"
        android:textAlignment="center"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/profilePicture" />

    <TextView
        android:id="@+id/birthDayView"
        android:layout_width="126dp"
        android:layout_height="35dp"
        android:layout_marginLeft="110dp"
        android:layout_marginStart="110dp"
        android:layout_marginTop="40dp"
        android:text="TextView"
        android:textAlignment="center"
        android:textSize="22dp"
        app:layout_constraintLeft_toRightOf="@+id/birthDayLabel"
        app:layout_constraintTop_toBottomOf="@+id/nameView" />

    <TextView
        android:id="@+id/birthDayLabel"
        android:layout_width="126dp"
        android:layout_height="35dp"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="40dp"
        android:text="Age"
        android:textSize="22dp"
        android:textAlignment="center"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/nameLabel" />

    <TextView
        android:id="@+id/genderView"
        android:layout_width="126dp"
        android:layout_height="35dp"
        android:layout_marginLeft="110dp"
        android:layout_marginStart="110dp"
        android:layout_marginTop="40dp"
        android:text="TextView"
        android:textAlignment="center"
        android:textSize="22dp"
        app:layout_constraintLeft_toRightOf="@+id/genderLabel"
        app:layout_constraintTop_toBottomOf="@+id/birthDayView" />

    <TextView
        android:id="@+id/genderLabel"
        android:layout_width="126dp"
        android:layout_height="35dp"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="40dp"
        android:text="Gender"
        android:textSize="22dp"
        android:textAlignment="center"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/birthDayLabel" />

    <FrameLayout
        android:layout_width="172dp"
        android:layout_height="157dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="43dp"
        android:layout_marginLeft="104dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:id="@+id/profilePicture">

    </FrameLayout>

    <Button
        android:id="@+id/homeButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="home"
        android:layout_marginLeft="148dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="11dp"
        app:layout_constraintTop_toBottomOf="@+id/genderLabel" />
</android.support.constraint.ConstraintLayout>